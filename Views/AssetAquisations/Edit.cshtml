                </select>
                <span asp-validation-for="VendorMasterId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AssetMasterId" class="form-label">Model</label>
                <select asp-for="AssetMasterId" class="form-control" asp-items="ViewBag.AssetMasterModelId">
                    <option value="">Select Type</option>
                </select>
                <span asp-validation-for="AssetMasterId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeId" class="form-label">Employee Id</label>
