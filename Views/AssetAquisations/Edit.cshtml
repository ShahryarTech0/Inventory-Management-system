            <div class="form-group">
                <label asp-for="AssetMasterId" class="form-label">Asset Type</label>
                <select asp-for="AssetMasterId" class="form-control" asp-items="ViewBag.AssetMasterId">
                    <option value="">Select Type</option>
                </select>
                <span asp-validation-for="AssetMasterId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VendorMasterId" class="form-label">Vendor Name</label>
                <select asp-for="VendorMasterId" class="form-control" asp-items="ViewBag.VendorMasterId">
